BOT_TOKEN=your-bot-token
BOT_MODE=polling
DATABASE_URL=sqlite+aiosqlite:///./onepick.db
LOG_LEVEL=INFO
ADMIN_TOKEN=your-admin-token

# TMDB
TMDB_BEARER_TOKEN=your-tmdb-token
TMDB_LANGUAGE=uk-UA
TMDB_SYNC_ENABLED=true
TMDB_PAGES_PER_RUN=10
TMDB_MAX_ITEMS_PER_RUN=2000
RECS_PREFER_CURATED=false

# LLM (OpenAI-compatible or Anthropic)
LLM_ENABLED=true
LLM_PROVIDER=anthropic
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4.1-mini
ANTHROPIC_API_KEY=your-anthropic-key
ANTHROPIC_MODEL=claude-haiku-4-5-20251001

# Channel
CHANNEL_ID=-100xxxxxxxxxx
CHANNEL_USERNAME=YourChannel
BOT_USERNAME=your_bot_username
CTA_RATE=0.50
POST_LANGUAGE=uk
CHANNEL_POST_ENABLED=true
POST_INTERVAL_MINUTES=0
